# Hugging Face Configuration
HUGGINGFACE_TOKEN=your_huggingface_token_here
HUGGINGFACE_REPO_ID=your-username/catastrophe-model

# GitHub Bot Configuration
GITHUB_TOKEN=your_github_personal_access_token_or_app_token
# GITHUB_WEBHOOK_SECRET is a random string you create to verify webhook requests
# Generate one with: openssl rand -hex 32
# Then use the same secret when configuring your GitHub webhook
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# Model Configuration
VULNERABILITY_THRESHOLD=0.5
MODEL_PATH=./hf_model/

# Optional: Bot Configuration
BOT_PORT=8080
COMMENT_ON_SAFE_CODE=false
MAX_FILES_PER_PR=50

# Optional: Training Configuration
BATCH_SIZE=32
EPOCHS=10
LEARNING_RATE=0.001
MAX_FEATURES=2000